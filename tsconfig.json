{
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/templates/**/*"]
}
